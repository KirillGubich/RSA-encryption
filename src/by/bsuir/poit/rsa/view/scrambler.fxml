<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="410.0" prefWidth="585.0" xmlns="http://javafx.com/javafx/15.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="by.bsuir.poit.rsa.controller.ScramblerController">
    <MenuBar layoutY="1.0" prefWidth="600.0">
        <Menu mnemonicParsing="false" text="File">
            <MenuItem fx:id="closeMenu" mnemonicParsing="false" onAction="#closeApp" text="Close"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Key">
            <MenuItem fx:id="keyCalculateMenu" mnemonicParsing="false" onAction="#viewKeyGeneratorWindow"
                      text="Generate"/>
        </Menu>
    </MenuBar>
    <TextArea fx:id="inputText" layoutX="13.0" layoutY="38.0" prefHeight="130.0" prefWidth="574.0"/>
    <TextField fx:id="keyInput" layoutX="53.0" layoutY="187.0" prefHeight="26.0" prefWidth="397.0"/>
    <TextField fx:id="rInput" layoutX="53.0" layoutY="226.0" prefHeight="26.0" prefWidth="398.0"/>
    <Label layoutX="23.0" layoutY="225.0" text="r">
        <font>
          <Font name="System Bold" size="18.0"/>
        </font>
    </Label>
    <Label layoutX="12.0" layoutY="186.0" text="key">
        <font>
          <Font name="System Bold" size="18.0"/>
        </font>
    </Label>
    <Button fx:id="encryptBtn" layoutX="474.0" layoutY="208.0" mnemonicParsing="false" onAction="#encryptText"
            prefHeight="26.0" prefWidth="95.0" text="Encrypt"/>
    <TextArea fx:id="resultText" editable="false" layoutX="13.0" layoutY="271.0" prefHeight="130.0" prefWidth="574.0"/>
</AnchorPane>
